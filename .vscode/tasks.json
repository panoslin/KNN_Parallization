{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "build serial",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++11",
                "-o", "serial",  // Output executable file
                "serial.cpp",  // Main C++ source file
                "-g",
                "-I", "libarff",  // Include directory for the header files
                "libarff/arff_attr.cpp",  // List of source files in the libarff folder
                "libarff/arff_data.cpp",
                "libarff/arff_instance.cpp",
                "libarff/arff_lexer.cpp",
                "libarff/arff_parser.cpp",
                "libarff/arff_scanner.cpp",
                "libarff/arff_token.cpp",
                "libarff/arff_utils.cpp",
                "libarff/arff_value.cpp"
              ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
